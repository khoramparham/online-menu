
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id  Int @id @default(autoincrement())
  createdAt DateTime @default(now())

  phone String @unique 
  otpCode Int @default(0)
  otpExpiresIn String @default(" ")
  email String?
  role  Role  @default(USER)
  
}
enum Role {
  USER
  ADMIN
}